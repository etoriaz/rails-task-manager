<h1> My Tasks </h1>

<ul>
  <% @tasks.each do |task| %>
  <div class="task">
    <li><%= link_to task.title, task_path(task) %></li>
  </div>
  <%= link_to "Delete a task",
    task_path(task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <div class="form-check">
    <% if task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
  </div>
  <% end  %>
<%= link_to "Add new task", tasks_new_path, class: "btn btn-primary" %>
</ul>
