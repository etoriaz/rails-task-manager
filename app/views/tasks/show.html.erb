
<h1> <%= @task.title %> </h1>
<h3> <%= @task.details %> </h3>
<p> <% if @task.completed == true %> </p>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>

<%= link_to 'Edit a task', task_edit_path(@task)%>
<%= link_to "Delete a task",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<%= link_to "Back to task List", tasks_path %>
